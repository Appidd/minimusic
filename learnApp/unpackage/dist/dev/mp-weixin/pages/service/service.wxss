.top {
  margin: 20rpx;
  display: flex;
  justify-content: space-between;
}
.top .category {
  font-size: 36rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
}
.top .category image {
  width: 20rpx;
  height: 20rpx;
  margin-left: 20rpx;
}
.card {
  padding: 20rpx;
  box-sizing: border-box;
}
.card .titleLine {
  display: flex;
  justify-content: space-between;
}
.card .titleLine .title {
  font-size: 32rpx;
  font-weight: 600;
}
.card .titleLine .arrbox {
  display: flex;
  align-items: center;
  color: #8D8E99;
  font-size: 28rpx;
}
.card .titleLine .arrbox .lookonly {
  width: 15rpx;
  height: 25rpx;
  margin-left: 20rpx;
}
.card .tagList {
  display: flex;
  margin-top: 20rpx;
}
.card .tagList view {
  font-size: 28rpx;
  color: #588BF9;
  background-color: #E1EBFF;
  margin-right: 20rpx;
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
}
.card .courseList {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  box-sizing: border-box;
}
.card .courseList .courseItem {
  width: 345rpx;
  box-sizing: border-box;
}
.card .courseList .courseItem .coursepic {
  margin-top: 10rpx;
  width: 345rpx;
  height: 260rpx;
  border-radius: 10rpx;
}
.card .courseList .courseItem .coursetag {
  width: 345rpx;
  font-weight: 600;
  margin-top: 10rpx;
}