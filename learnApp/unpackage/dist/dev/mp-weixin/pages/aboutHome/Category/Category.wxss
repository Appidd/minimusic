/* 文章场景相关 */
.cate {
  display: flex;
  height: 100vh;
}
.cate .left {
  height: 100%;
  background-color: white;
  width: 30%;
  display: flex;
  align-items: center;
  flex-direction: column;
  font-weight: 600;
}
.cate .left .cateitem {
  padding: 20rpx 0rpx;
  width: 100%;
  box-sizing: border-box;
  text-align: center;
}
.cate .left .active {
  box-sizing: border-box;
  width: 100%;
  text-align: center;
  color: #004BED;
  padding: 20rpx 0rpx;
  background-color: #FBFBFD;
}
.cate .right {
  height: 100%;
  /* background-color: gray; */
  width: 70%;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.cate .right .catename {
  /* height: 100%; */
  /* background-color: gray; */
  width: 100%;
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  flex-direction: column;
}
.cate .right .catename .classname {
  color: #8D8E99;
}
.cate .right .catename .classitem {
  width: 100%;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.cate .right .catename .classitem view {
  margin-top: 20rpx;
  width: 200rpx;
  background-color: white;
  text-align: center;
  border-radius: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
}
.cate .right .catename .classitem .blueborder {
  border: 1rpx solid #004BED;
}