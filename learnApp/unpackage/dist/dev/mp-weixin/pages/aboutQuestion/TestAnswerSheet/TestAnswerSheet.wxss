.toplist {
  padding: 40rpx 20rpx;
  width: 100%;
  background-color: white;
  display: flex;
  justify-content: center;
  box-sizing: border-box;
}
.toplist .topitem {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.toplist .topitem .title {
  margin-top: 15rpx;
  color: #8D8E99;
}
.grayline {
  height: 20rpx;
  background-color: #EEF0F2;
}
.quescard {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 20rpx;
}
.quescard .dtk {
  color: #8D8E99;
}
.quescard .circle {
  height: 30rpx;
  width: 30rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  margin-left: 20rpx;
}
.quescard .cright {
  background-image: linear-gradient(to right, #588BF9, #004BED);
}
.quescard .ccenter {
  background-image: linear-gradient(to right, #F09819, #FF512F);
}
.quescard .notr {
  background-color: #BFBFBF;
}
.quescard .tags {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}
.quescard .quebox {
  width: 700rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  margin-bottom: 200rpx;
}
.quescard .quebox .chooseitem {
  margin-top: 20rpx;
  width: 140rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.quescard .quebox .chooseitem .qcircle {
  width: 80rpx;
  height: 80rpx;
  background-color: #BFBFBF;
  border-radius: 50%;
  text-align: center;
  line-height: 80rpx;
  color: white;
}
.btnlist {
  position: fixed;
  padding: 20rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  bottom: 20rpx;
}
.btnlist .allanalysis {
  width: 320rpx;
  text-align: center;
  height: 80rpx;
  color: white;
  line-height: 80rpx;
  background-image: linear-gradient(to right, #588BF9, #004BED);
  border-radius: 40rpx;
}
.btnlist .erranalysis {
  width: 320rpx;
  text-align: center;
  height: 80rpx;
  color: white;
  line-height: 80rpx;
  background-image: linear-gradient(to right, #F09819, #FF512F);
  border-radius: 40rpx;
}